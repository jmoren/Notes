= form_for [:admin, @user] do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"

      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label 'admin?'
    = check_box_tag 'admin', nil, @user.has_role?('admin')

  .actions
    = f.submit

